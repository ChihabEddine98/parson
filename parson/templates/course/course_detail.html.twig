                        {#</div>#}
                        <!-- /END AVIS  -->



                </div>

            <!-- <div class="btn_">
                <a href="/register" class="btn"> Commencer ! </a>
            </div> -->

        </div>

        </div>
    </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js"></script>
<script>
    $( document ).ready(function() {



        //AJAX
        function SubmitData() {

            var comment = $("#comment").val();

            $.ajax({
                type: "POST",
                dataType:"json",
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify({ "comment": comment , "id":{{ course.id }} }),
                url: "{{ path('new_comment') }}",
                success: function () {
                    $('#comment').val('');
                    $('#message').html("<h2>Commentaire envoyé.</h2>")
                                 .append("<p> Coool ! </p> ")
                    $('#message').css({opacity: 1});
                    setTimeout(function() {
                        $('#message').delay(800).fadeOut(1000)
                    },800);
                    setTimeout(function(){// wait for 5 secs(2)
                        location.reload(); // then reload the page.(3)
                    }, 2000);




                }
            });
            return false;
        }


        //For debugging
        $('#btnNewComment').live('click',function () {
            SubmitData();
        });

    });

</script>

    {#    Rating hnaaa !#}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="{{ asset('js/rating.js') }}"></script>

    <script>
        $.ratePicker("#rating-1", {
            max :5,
            rgbOn:"#e74c3c",
            rgbOff:"#ecf0f1",
            rgbSelection:"#e74c3c",
            cursor:"pointer",
            rate : function (stars)
            {
                $.ajax({
                    type: "POST",
                    dataType:"json",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({ "stars": stars , "id":{{ course.id }} }),
                    url: "{{ path('course_rate') }}",
                    success: function () {
                        console.log(" rated successfully ");
                    }
                });
            }
        });
    </script>

